<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Подсолнух</title>

    <link rel="stylesheet" href="http://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>
</head>

<body>
    <div class="row">
        <div class="center">
            <h4>Вход:</h4>
        </div>
        <form class="col s12">
            <div class="row">
                <div class="input-field col l6 m8 s12 offset-l3 offset-m2">
                    <input id="login" type="text" minlength="3" class="validate" name="login" required>
                    <label for="login">Имя пользователя</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col l6 m8 s12 offset-l3 offset-m2">
                    <input id="password" type="password" minlength="3" class="validate" name="password" required>
                    <label for="password">Пароль</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col l6 m8 s12 offset-l3 offset-m2">
                    <input id="btn_send" class="btn right" type="submit" value="Войти" />
                </div>
            </div>
        </form>
    </div>


    <script>
        // button send
        document.getElementById("btn_send").onclick = function (e) {
            e.preventDefault();
            var data = {};
            data["username"] = $("#login").val();
            data["password"] = $("#password").val();

            $.ajax({
                url: "/api/auth",
                method: "POST",
                data: data
            })
                .done((result) => {
                    document.location.href = "/orders";
                })
                .fail((err) => {
                    Materialize.toast("Ошибка авторизации. Неправильный логин или пароль.", 4000);
                })
        };
    </script>

</body>

</html>